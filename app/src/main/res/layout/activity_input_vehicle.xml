<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputVehicleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/INPUT_VEHICLE_MAKE_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
        <TextView
            android:id="@+id/INPUT_VEHICLE_MAKE_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Vehicle make" />
        <EditText
            android:id="@+id/INPUT_VEHICLE_MODEL_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
        <TextView
            android:id="@+id/INPUT_VEHICLE_MODEL_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Vehicle model" />
        <EditText
            android:id="@+id/INPUT_VEHICLE_YEAR_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
        <TextView
            android:id="@+id/INPUT_VEHICLE_YEAR_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Vehicle year" />
        <EditText
            android:id="@+id/INPUT_VEHICLE_COLOR_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
        <TextView
            android:id="@+id/INPUT_VEHICLE_COLOR_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Vehicle color" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/INPUT_VEHICLE_ADD_BUTTON"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>