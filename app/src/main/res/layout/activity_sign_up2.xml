<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/FIRST_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/FIRST_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="First name" />
        <EditText
            android:id="@+id/LAST_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/LAST_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Last name" />
        <EditText
            android:id="@+id/STREET_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/STREET_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Street address" />
        <EditText
            android:id="@+id/CITY_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/CITY_TEXT"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="City" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/STATE_INPUT"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/STATE_TEXT"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="State" />
            </LinearLayout>
            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/ZIP_INPUT"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/ZIP_TEXT"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Zip Code" />
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/PHONE_INPUT"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/PHONE_TEXT"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Phone" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/SIGNUP_BUTTON2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Complete Registration" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>